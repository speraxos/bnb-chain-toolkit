# Self-hosted paymaster signer (optional)
PAYMASTER_SIGNER_KEY=

# ============================================================================
# Solana Enhanced
# ============================================================================
HELIUS_API_KEY=
JITO_TIP_LAMPORTS=10000

# ============================================================================
# Security & Simulation
# ============================================================================
TENDERLY_ACCESS_KEY=
TENDERLY_ACCOUNT=
TENDERLY_PROJECT=
GOPLUS_API_KEY=

# ============================================================================
# Server Configuration
# ============================================================================
PORT=3000
NODE_ENV=development

# ============================================================================
# Monitoring & Observability
# ============================================================================
SENTRY_DSN=
DATADOG_API_KEY=
