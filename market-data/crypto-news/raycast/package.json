{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "crypto-news",
  "title": "Free Crypto News",
  "description": "Get real-time crypto news from 130+ trusted sources",
  "icon": "extension-icon.png",
  "author": "free-crypto-news",
  "categories": ["News", "Finance"],
  "license": "SEE LICENSE IN LICENSE",
  "commands": [
    {
      "name": "latest",
      "title": "Latest News",
      "description": "Get latest crypto news",
      "mode": "view"
    },
    {
      "name": "breaking",
      "title": "Breaking News",
      "description": "Get breaking crypto news",
      "mode": "view"
    },
    {
      "name": "bitcoin",
      "title": "Bitcoin News",
      "description": "Get Bitcoin-specific news",
      "mode": "view"
    },
    {
      "name": "defi",
      "title": "DeFi News",
      "description": "Get DeFi-specific news",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search News",
      "description": "Search crypto news",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Search query",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "trending",
      "title": "Trending Topics",
      "description": "See trending crypto topics",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.0",
    "@types/react": "18.2.38",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
