{
  "name": "@free-crypto-news/rag",
  "version": "1.0.0",
  "description": "Production-grade RAG (Retrieval-Augmented Generation) system for cryptocurrency news",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rag",
    "retrieval-augmented-generation",
    "cryptocurrency",
    "crypto",
    "news",
    "ai",
    "llm",
    "vector-search",
    "semantic-search",
    "embeddings",
    "groq",
    "redis"
  ],
  "author": "Free Crypto News",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/nirholas/crypto-news-rag"
  },
  "homepage": "https://github.com/nirholas/crypto-news-rag#readme",
  "bugs": {
    "url": "https://github.com/nirholas/crypto-news-rag/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "groq-sdk": "^0.8.0"
  },
  "optionalDependencies": {
    "ioredis": "^5.4.0",
    "@huggingface/inference": "^2.8.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
