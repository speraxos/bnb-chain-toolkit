    "linea",
    "scroll",
    "zksync",
    "mantle",
    "blast",
    "mode",
    "sei"
  ],
  "categories": [
    "blockchain",
    "defi",
    "trading",
    "security",
    "analytics",
    "nft",
    "cross-chain",
    "payments"
  ],
