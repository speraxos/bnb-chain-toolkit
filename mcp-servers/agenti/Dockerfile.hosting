# MCP Hosting Platform - Wildcard Server
# Handles *.agenti.cash subdomain routing to hosted MCP servers

FROM node:20-alpine AS builder

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --legacy-peer-deps

# Copy source
COPY . .

# Build
RUN npm run build

# Production image
FROM node:20-alpine AS production

WORKDIR /app

# Install curl for healthcheck
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install production dependencies only
RUN npm ci --legacy-peer-deps --omit=dev

# Copy built files
COPY --from=builder /app/dist ./dist

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Create data directories
RUN mkdir -p /app/data /app/logs && \
    chown -R nodejs:nodejs /app

USER nodejs

# Environment
ENV NODE_ENV=production
ENV WILDCARD_PORT=3001

# Expose ports:
# 3001 - Main wildcard server
# 4001 - Health check server
EXPOSE 3001 4001

# Health check using the dedicated health port
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:4001/health || exit 1

# Start wildcard server
CMD ["node", "-e", "import('./dist/hosting/wildcard-server.js').then(m => m.startWildcardServer())"]
