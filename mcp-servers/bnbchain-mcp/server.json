{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nirholas/bnbchain-mcp",
  "title": "BNB Chain MCP",
  "description": "Developer tools for AI crypto agents - DeFi trading, DEX swaps, smart contracts, tokens, staking, bridging on BSC and opBNB",
  "license": "MIT",
  "authors": [
    {
      "name": "nich",
      "url": "https://github.com/nirholas"
    }
  ],
  "repository": {
    "url": "https://github.com/nirholas/bnbchain-mcp",
    "source": "github"
  },
  "version": "1.0.0",
  "links": {
    "homepage": "https://github.com/nirholas/bnbchain-mcp",
    "bugs": "https://github.com/nirholas/bnbchain-mcp/issues",
    "npm": "https://www.npmjs.com/package/@nirholas/bnbchain-mcp"
  },
  "icons": [
    {
      "url": "https://raw.githubusercontent.com/nirholas/g1t/d9a0ee206b8136472c04384905999369f198b3c9/milady.svg",
      "type": "svg"
    }
  ],
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@nirholas/bnbchain-mcp",
      "version": "1.0.0",
      "runtimeHint": "npx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "BSC_RPC_URL",
          "description": "BNB Smart Chain RPC endpoint URL",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "PRIVATE_KEY",
          "description": "Wallet private key for signing transactions",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "BSCSCAN_API_KEY",
          "description": "BscScan API key for contract verification and data",
          "isRequired": false,
          "isSecret": true
        }
      ]
    }
  ],
  "_meta": {
    "io.modelcontextprotocol.registry/publisher-provided": {
      "keywords": [
        "bnb",
        "bsc",
        "binance-smart-chain",
        "opbnb",
        "defi",
        "dex",
        "swap",
        "smart-contracts",
        "tokens",
        "staking",
        "bridge",
        "web3",
        "mcp",
        "ai"
      ],
      "category": "Blockchain"
    }
  }
}
