[project]
name = "{{ package_name }}"
version = "1.0.0"
description = "MCP Server for {{ server_name }}"
requires-python = ">=3.10"
dependencies = [
    "mcp>=1.0.0",
    "web3>=6.0.0",
    "pydantic>=2.0.0",
    "python-dotenv>=1.0.0",
]

[project.scripts]
{{ package_name }} = "server:mcp.run"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
