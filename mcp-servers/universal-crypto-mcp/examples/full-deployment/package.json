{
  "name": "full-deployment-example",
  "version": "1.0.0",
  "description": "Complete production deployment with real market data, DeFi, wallet, and payment integrations",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:legacy": "node dist/index.js",
    "dev": "tsx src/server.ts",
    "dev:legacy": "tsx src/index.ts",
    "start:http": "node dist/index.js --http",
    "start:sse": "node dist/index.js --sse",
    "test": "tsx src/test.ts"
  },
  "keywords": [
    "mcp",
    "crypto",
    "defi",
    "wallet",
    "trading",
    "x402"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@nirholas/crypto-mcp-core": "workspace:*",
    "@universal-crypto-mcp/trading-binance": "workspace:*",
    "@universal-crypto-mcp/market-data-aggregator": "workspace:*",
    "@universal-crypto-mcp/wallet-evm": "workspace:*",
    "@universal-crypto-mcp/defi-protocols": "workspace:*",
    "@universal-crypto-mcp/payments-x402": "workspace:*",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
