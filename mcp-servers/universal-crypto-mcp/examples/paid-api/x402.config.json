{
  "name": "my-paid-crypto-api",
  "version": "1.0.0",
  "description": "Premium cryptocurrency data API with x402 payments",
  
  "payment": {
    "wallet": "0x40252CFDF8B20Ed757D61ff157719F33Ec332402",
    "network": "eip155:42161",
    "assets": ["USDC", "USDs"]
  },
  
  "pricing": {
    "default": "blocked",
    "currency": "USD",
    "routes": {
      "GET /api/health": "free",
      "GET /api/v1/price/:symbol": "$0.0001",
      "GET /api/v1/prices": "$0.0005",
      "GET /api/v1/trending": "$0.0001",
      "GET /api/v1/premium/analysis/:symbol": "$0.01",
      "GET /api/v1/premium/signals": "$0.05"
    }
  },
  
  "discovery": {
    "enabled": true,
    "categories": ["crypto", "market-data", "analytics"],
    "tags": ["bitcoin", "ethereum", "prices", "real-time", "trading-signals"],
    "instructions": "Premium cryptocurrency data API. Use GET /api/v1/price/{symbol} for current prices, GET /api/v1/premium/analysis/{symbol} for detailed analysis.",
    "examples": [
      {
        "description": "Get Bitcoin price",
        "request": {
          "method": "GET",
          "path": "/api/v1/price/BTC"
        },
        "response": {
          "symbol": "BTC",
          "price": 67890.12,
          "change24h": 2.5
        }
      },
      {
        "description": "Get premium analysis",
        "request": {
          "method": "GET",
          "path": "/api/v1/premium/analysis/ETH"
        },
        "response": {
          "symbol": "ETH",
          "trend": "bullish",
          "support": 3200,
          "resistance": 3800
        }
      }
    ]
  },
  
  "dashboard": {
    "enabled": true,
    "path": "/x402/dashboard"
  },
  
  "security": {
    "rateLimit": {
      "enabled": true,
      "windowMs": 60000,
      "max": 100
    }
  }
}
