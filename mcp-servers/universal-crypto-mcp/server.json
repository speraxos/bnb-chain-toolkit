{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.nirholas/universal-crypto-mcp",
  "title": "Universal Crypto MCP",
  "description": "Universal blockchain MCP server - swaps, bridges, staking, lending, tokens on Ethereum, Arbitrum, Base, Polygon, Optimism and all EVM chains",
  "license": "MIT",
  "authors": [
    {
      "name": "nich",
      "url": "https://github.com/nirholas"
    }
  ],
  "repository": {
    "url": "https://github.com/nirholas/universal-crypto-mcp",
    "source": "github"
  },
  "version": "0.1.0",
  "links": {
    "homepage": "https://github.com/nirholas/universal-crypto-mcp",
    "bugs": "https://github.com/nirholas/universal-crypto-mcp/issues",
    "npm": "https://www.npmjs.com/package/@nirholas/universal-crypto-mcp"
  },
  "icons": [
    {
      "url": "https://raw.githubusercontent.com/nirholas/g1t/d9a0ee206b8136472c04384905999369f198b3c9/milady.svg",
      "type": "svg"
    }
  ],
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@nirholas/universal-crypto-mcp",
      "version": "0.1.0",
      "runtimeHint": "npx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "RPC_URL",
          "description": "Default EVM RPC endpoint URL (or use chain-specific like ETH_RPC_URL, ARB_RPC_URL)",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "PRIVATE_KEY",
          "description": "Wallet private key for signing transactions",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "ALCHEMY_API_KEY",
          "description": "Alchemy API key for enhanced RPC access",
          "isRequired": false,
          "isSecret": true
        }
      ]
    }
  ],
  "_meta": {
    "io.modelcontextprotocol.registry/publisher-provided": {
      "keywords": [
        "crypto",
        "blockchain",
        "defi",
        "swap",
        "bridge",
        "staking",
        "lending",
        "ethereum",
        "arbitrum",
        "base",
        "polygon",
        "optimism",
        "evm",
        "web3",
        "mcp",
        "ai"
      ],
      "category": "Blockchain"
    }
  }
}