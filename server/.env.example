# Backend Server Environment Variables
# Copy this file to .env in the server directory

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Blockchain RPC Endpoints
VITE_INFURA_API_KEY=your_infura_api_key
VITE_ALCHEMY_API_KEY=your_alchemy_api_key

# Faucet Configuration (Server-Side Only)
# WARNING: Keep this private! Never commit actual private keys
FUNDER_PRIVATE_KEY=your_private_key_for_faucet_wallet

# AI Services (Server-Side Only)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Translation Service (Free Llama API via Groq)
# Get from https://console.groq.com/keys (free!)
GROQ_API_KEY=your_groq_api_key

# IPFS Configuration (Server-Side Only)
# Get from https://pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# Monitoring & Error Tracking
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
REDIS_URL=redis://localhost:6379

# Storage (for workspace snapshots)
STORAGE_S3_BUCKET=your_s3_bucket
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY=your_access_key
STORAGE_S3_SECRET_KEY=your_secret_key

# Feature Flags
ENABLE_FAUCET=true
ENABLE_AI_SERVICES=true
ENABLE_IPFS=true
