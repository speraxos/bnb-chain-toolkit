{
  "name": "@w3ag/react",
  "version": "0.1.0",
  "description": "W3AG-compliant React components for accessible Web3 interfaces",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest",
    "test:a11y": "vitest run --config vitest.a11y.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "jest-axe": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "web3",
    "defi",
    "wcag",
    "w3ag",
    "react",
    "ethereum",
    "wallet",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nirholas/w3ag.git"
  },
  "license": "MIT",
  "author": "W3AG Contributors",
  "bugs": {
    "url": "https://github.com/nirholas/w3ag/issues"
  },
  "homepage": "https://github.com/nirholas/w3ag#readme"
}
